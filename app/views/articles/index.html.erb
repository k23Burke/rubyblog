<h1>Listing articles</h1>
<%= link_to 'New', new_article_path %>
<table>
  <tr>
    <th>Title</th>
    <th>Text</th>
    <th>Edit</th>
    <th>Delete</th>
  </tr>

  <% @articles.each do |article| %>
    <tr>
      <td><%= link_to article.title, article_path(article.id) %> </td>
      <td><%= article.text %></td>
      <td><%= link_to 'Edit', edit_article_path(article.id) %></td>
      <td><%= link_to 'Delete', article_path(article.id), method: :delete, data:{confirm: 'Are you sure?'} %></td>
    </tr>
  <% end %>
</table>